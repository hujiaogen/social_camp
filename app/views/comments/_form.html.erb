<%= form_for @comment, remote: true do |f| %>
	<%= render 'shared/error_messages', object: @comment %>
	<%= hidden_field_tag(:discussion_id, @comment.discussion.id) %>
    <%= f.text_area :content, rows: 4, id: "comment_input" %>

    <%= f.submit @comment.new_record? ? "Comment" : "Update", class: "btn btn-small btn-primary" %>
<% end %>
