<%= provide(:title, 'View event') %>
<h1>Event details</h1>

<div class="row">
  <div class="span6 offset3">
    <p>
      <b>Name:</b>
      <%= @event.name %>
    </p>

    <% unless @event.location.empty? %>
      <p>
        <b>Location:</b>
        <%= @event.location %>
      </p>
    <% end %>

    <% unless @event.description.empty? %>
      <p>
        <b>Description:</b>
        <%= @event.description %>
      </p>
    <% end %>

    <p>
      <b>Start at:</b>
      <%= format_datetime @event.start_at %>
    </p>

    <p>
      <b>Updated by:</b>
      <%= link_to @event.user.name, @event.user %>&nbsp;
      <span class="updated_time"><%= time_ago_in_words(@event.updated_at) %>&nbsp;ago</span>
    </p>
    <%= link_to 'All Events', events_path %>
    <% if current_user == @event.user || current_user.admin? %>
       | <%= link_to 'Edit', edit_event_path(@event) %>
       | <%= link_to 'Delete', @event, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </div>
</div>